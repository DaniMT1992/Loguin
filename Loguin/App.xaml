<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="Loguin.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Loguin">

    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="BackgroundColor">#33333F</Color>
            <Color x:Key="PrimaryBackgroundColor">#72B8DA</Color>
            <Color x:Key="LightFontColor">#FFFFFF</Color>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary
                    Source="Resources/Styles/Styles.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>